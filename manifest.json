{
    "manifest_version": 2,
    "name": "LinkedIn Profile Scraper",
    "description": "Scrapes LinkedIn profile data and downloads it as a CSV",
    "version": "1.0",
    "author": "@thomasforth",

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "permissions": [
        "downloads",
        "activeTab",
        "scripting"
    ],

    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/in/*/overlay/contact-info/"],
            "js": ["content.js"]
        }
    ]
}
